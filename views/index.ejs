<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Noticias Recientes - El País</title>

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          animation: {
            'fade-in': 'fadeIn 0.6s ease-out forwards',
            'slide-up': 'slideUp 0.6s ease-out forwards',
            'pulse-slow': 'pulse 3s infinite',
          },
          keyframes: {
            fadeIn: {
              '0%': { opacity: '0', transform: 'translateY(20px)' },
              '100%': { opacity: '1', transform: 'translateY(0)' }
            },
            slideUp: {
              '0%': { transform: 'translateY(30px)', opacity: '0' },
              '100%': { transform: 'translateY(0)', opacity: '1' }
            }
          }
        }
      }
    }
  </script>

  <!-- AOS (Animate On Scroll) -->
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>

  <style>
    .card-hover {
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.1);
      transform: perspective(1000px) rotateX(0deg) rotateY(0deg);
    }
    .card-hover:hover {
      transform: perspective(1000px) rotateX(5deg) rotateY(-5deg) translateY(-8px);
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }
    .pagination-btn {
      @apply px-4 py-2 rounded-full transition-all duration-300 font-medium;
    }
    .pagination-btn:hover {
      @apply bg-blue-600 text-white transform scale-105;
    }
    .pagination-btn.active {
      @apply bg-blue-600 text-white shadow-lg;
    }
  </style>
</head>
<body class="bg-gradient-to-br from-gray-50 to-blue-50 dark:from-gray-900 dark:to-gray-800 min-h-screen transition-colors duration-500">

  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <!-- Header -->
    <header class="text-center mb-12" data-aos="fade-down">
      <h1 class="text-5xl md:text-6xl font-bold text-gray-800 dark:text-white mb-3">
        <i class="fas fa-newspaper text-blue-600 animate-pulse-slow"></i>
        Últimas Noticias
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-300">El País | Actualizado hoy</p>
    </header>

    <!-- Noticias por página -->
    <% 
      const itemsPerPage = 9;
      const totalItems = noticias.length;
      const totalPages = Math.ceil(totalItems / itemsPerPage);
    %>

    <% for(let page = 1; page <= totalPages; page++) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-10 news-page <%= page === 1 ? 'active' : '' %>" 
           id="page<%= page %>" style="display: <%= page === 1 ? 'grid' : 'none' %>;">
        
        <% 
          const startIndex = (page - 1) * itemsPerPage;
          const endIndex = Math.min(startIndex + itemsPerPage, totalItems);
          
          for(let i = startIndex; i < endIndex; i++) { 
            const noticia = noticias[i];
            if(!noticia) continue;
            const delay = ((i % itemsPerPage) * 100) + 'ms';
        %>
          <article 
            class="bg-white dark:bg-gray-800 rounded-2xl overflow-hidden shadow-lg card-hover group"
            data-aos="fade-up" 
            data-aos-delay="<%= delay %>"
            style="animation-delay: <%= delay %>">
            
            <div class="p-6 relative">
              <!-- Categoría -->
              <span class="absolute top-0 right-0 bg-gradient-to-br from-blue-600 to-blue-700 text-white text-xs font-bold px-3 py-1 rounded-bl-xl">
                Actualidad
              </span>

              <!-- Icono animado -->
              <div class="w-14 h-14 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
                <i class="fas fa-newspaper text-blue-600 text-xl"></i>
              </div>

              <!-- Fecha -->
              <p class="text-sm text-gray-500 dark:text-gray-400 flex items-center mb-2">
                <i class="far fa-calendar-alt mr-2"></i> Hoy
              </p>

              <!-- Título -->
              <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-3 line-clamp-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                <a href="<%= noticia.link %>" target="_blank" class="hover:underline">
                  <%= noticia.titulo %>
                </a>
              </h3>

              <!-- Botones -->
              <div class="flex justify-between items-center mt-5">
                <a href="<%= noticia.link %>" target="_blank" 
                   class="inline-flex items-center text-blue-600 dark:text-blue-400 font-medium hover:gap-3 transition-all duration-300">
                  Leer más 
                  <i class="fas fa-arrow-right ml-2 transform group-hover:translate-x-1 transition-transform"></i>
                </a>

                <div class="flex gap-2">
                  <button class="p-2 rounded-lg bg-gray-100 dark:bg-gray-700 hover:bg-blue-100 dark:hover:bg-blue-900 text-gray-600 dark:text-gray-300 transition-colors" title="Compartir">
                    <i class="fas fa-share-alt"></i>
                  </button>
                  <button class="p-2 rounded-lg bg-gray-100 dark:bg-gray-700 hover:bg-red-100 dark:hover:bg-red-900 text-gray-600 dark:text-gray-300 transition-colors" title="Guardar">
                    <i class="far fa-bookmark"></i>
                  </button>
                </div>
              </div>
            </div>
          </article>
        <% } %>
      </div>
    <% } %>

    <!-- Paginación -->
    <div class="flex flex-col items-center mt-12 space-y-4">
      <div class="flex gap-2 flex-wrap justify-center">
        <button id="prev-page" class="pagination-btn bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 disabled:opacity-50 disabled:cursor-not-allowed" <%= totalPages <= 1 ? 'disabled' : '' %>>
          <i class="fas fa-chevron-left"></i>
        </button>

        <% for(let i = 1; i <= totalPages; i++) { %>
          <button class="pagination-btn <%= i === 1 ? 'active' : 'bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300' %>" 
                  data-page="<%= i %>">
            <%= i %>
          </button>
        <% } %>

        <button id="next-page" class="pagination-btn bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 disabled:opacity-50 disabled:cursor-not-allowed" <%= totalPages <= 1 ? 'disabled' : '' %>>
          <i class="fas fa-chevron-right"></i>
        </button>
      </div>

      <p class="text-sm text-gray-600 dark:text-gray-400">
        Mostrando <span id="currentPageStart">1</span>-<span id="currentPageEnd"><%= Math.min(itemsPerPage, totalItems) %></span> 
        de <span id="totalItems"><%= totalItems %></span> noticias
      </p>
    </div>
  </div>

  <!-- JavaScript -->
  <script >
    AOS.init({
      duration: 600,
      once: true,
      offset: 100
    });

    document.addEventListener('DOMContentLoaded', function() {
      let currentPage = 1;
      const totalPages = <%= totalPages %>;
      const itemsPerPage = <%= itemsPerPage %>;
      const totalItems = <%= totalItems %>;

      function goToPage(page) {
        if (page < 1 || page > totalPages) return;

        // Ocultar todas las páginas
        document.querySelectorAll('.news-page').forEach(p => p.style.display = 'none');
        const targetPage = document.getElementById('page' + page);
        targetPage.style.display = 'grid';

        // Animar entrada
        targetPage.querySelectorAll('[data-aos]').forEach(el => {
          el.setAttribute('data-aos', 'fade-up');
          AOS.refreshHard();
        });

        // Actualizar paginación
        document.querySelectorAll('.pagination-btn[data-page]').forEach(btn => {
          btn.classList.remove('active', 'bg-blue-600', 'text-white', 'shadow-lg');
          btn.classList.add('bg-white', 'dark:bg-gray-800', 'text-gray-700', 'dark:text-gray-300');
        });
        const activeBtn = document.querySelector(`.pagination-btn[data-page="${page}"]`);
        if (activeBtn) {
          activeBtn.classList.add('active', 'bg-blue-600', 'text-white', 'shadow-lg');
          activeBtn.classList.remove('bg-white', 'text-gray-700');
        }

        // Botones prev/next
        document.getElementById('prev-page').disabled = page === 1;
        document.getElementById('next-page').disabled = page === totalPages;

        // Contador
        const start = (page - 1) * itemsPerPage + 1;
        const end = Math.min(page * itemsPerPage, totalItems);
        document.getElementById('currentPageStart').textContent = start;
        document.getElementById('currentPageEnd').textContent = end;

        currentPage = page;

        // Scroll suave
        document.querySelector('h1').scrollIntoView({ behavior: 'smooth', block: 'start' });
      }

      // Eventos paginación
      document.querySelectorAll('.pagination-btn[data-page]').forEach(btn => {
        btn.addEventListener('click', () => goToPage(parseInt(btn.dataset.page)));
      });

      document.getElementById('prev-page').addEventListener('click', () => {
        if (currentPage > 1) goToPage(currentPage - 1);
      });

      document.getElementById('next-page').addEventListener('click', () => {
        if (currentPage < totalPages) goToPage(currentPage + 1);
      });

      // Dark mode toggle (opcional)
      const darkToggle = document.createElement('button');
      darkToggle.innerHTML = `<i class="fas fa-moon"></i>`;
      darkToggle.className = 'fixed bottom-6 right-6 p-4 bg-white dark:bg-gray-800 rounded-full shadow-xl hover:scale-110 transition-all z-50';
      darkToggle.onclick = () => document.documentElement.classList.toggle('dark');
      document.body.appendChild(darkToggle);
    });
  </script>
</body>
</html>